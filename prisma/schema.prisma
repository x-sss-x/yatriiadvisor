// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tourist {
  id             Int         @id @default(autoincrement())
  First_name     String
  Last_name      String
  Phone_number   BigInt      @db.BigInt
  Mail_ID        String
  Password       String
  City           String
  Address        String
  Interest_Place String
  Review         Review[]
  history        history[]
  Favorites      Favorites[]
}

model Guide {
  Guide_ID     Int    @id @default(autoincrement())
  First_name   String
  Last_name    String
  ID_Proof     String
  Mail_ID      String
  Password     String
  Address      String
  City         String
  Phone_number BigInt @db.BigInt
  Experience   String
}

model Destination {
  ID          Int         @id @default(autoincrement())
  Name        String
  Best_time   String
  Best_season String
  Hotels      String
  Places      Places[]
  Favorites   Favorites[]
}

model Places {
  ID             Int         @id @default(autoincrement())
  Destination    Destination @relation(fields: [Destination_Id], references: [ID])
  Destination_Id Int
  Place_Name     String
  Image          String
  Weather        Weather[]
}

model Review {
  ID          Int       @id @default(autoincrement())
  Tourist     Tourist   @relation(fields: [T_ID], references: [id])
  T_ID        Int
  Rating      Int
  Review      String    @db.VarChar(200)
  Destination String
  Date        DateTime
  history     history[]
}

model history {
  ID        Int     @id @default(autoincrement())
  Tourist   Tourist @relation(fields: [T_ID], references: [id])
  T_ID      Int
  Review    Review  @relation(fields: [Review_ID], references: [ID])
  Review_ID Int
}

model Weather {
  ID          Int      @id @default(autoincrement())
  Places      Places   @relation(fields: [Place_Id], references: [ID])
  Place_Id    Int
  Temperature String
  Humidity    Float
  date        DateTime
  Day         String
}

model Favorites {
  Fav_ID      Int         @id @default(autoincrement())
  Tourist     Tourist     @relation(fields: [T_ID], references: [id])
  T_ID        Int
  Destination Destination @relation(fields: [D_ID], references: [ID])
  D_ID        Int
}
